<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FallenLegends"
        tools:targetApi="31">
        <activity
            android:name=".views.RecoveryScreen"
            android:exported="false" />
        <activity
            android:name=".views.GameActivity"
            android:exported="false" />
        <activity
            android:name=".views.SignUpScreen"
            android:exported="false" />
        <activity
            android:name=".views.LoginScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.HomeScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.AboutScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.TermsConditionsScreen"
            android:screenOrientation="portrait" />
    </application>

</manifest>