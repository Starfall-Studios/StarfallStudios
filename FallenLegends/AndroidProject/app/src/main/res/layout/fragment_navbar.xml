<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/test_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="4dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:src="@drawable/baseline_supervisor_account_24"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:elevation="20dp"
            android:background="@drawable/forbuttons"
            android:layout_marginEnd="6dp"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_shopping_cart_24"
            android:layout_marginEnd="6dp"
            android:background="@drawable/forbuttons"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:src="@drawable/baseline_location_searching_24"
            android:scaleType="fitCenter"
            android:layout_marginEnd="6dp"
            android:background="@drawable/forbuttons"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:padding="5dp"
            android:src="@drawable/baseline_map_24"
            android:scaleType="fitCenter"
            android:layout_marginEnd="6dp"
            android:background="@drawable/forbuttons"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:padding="5dp"
            android:src="@drawable/baseline_local_library_24"
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"
            android:background="@drawable/forbuttons"/>

    </LinearLayout>



</FrameLayout>