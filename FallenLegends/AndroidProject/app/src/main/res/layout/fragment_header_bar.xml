<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.HeaderBar">

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center"
            android:layout_marginHorizontal="8dp">

            <ProgressBar
                android:id="@+id/playerExperienceBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center"
                android:elevation="2dp"
                android:progress="50"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/circle"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="start|center"
                android:onClick="onProfileClick"
                android:layout_marginStart="1dp"

                android:elevation="1dp"
                android:src="@drawable/roundbutton" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="start|center"
                android:layout_marginStart="20dp"
                android:onClick="onProfileClick"
                android:src="@drawable/test_shape" />

            <TextView
                android:id="@+id/txt_playerName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="51dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center"
                android:layout_marginStart="30dp"
                android:src="@drawable/test_shape" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left|center"
                android:src="@drawable/pngwing_com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="41dp"
                android:gravity="left|center"
                android:text="food"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/test_shape" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/emerald_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="29dp"
                android:text="gems"
                android:textColor="@color/white"/>

        </FrameLayout>


    </FrameLayout>
</layout>